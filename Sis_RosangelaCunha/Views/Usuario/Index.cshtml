<div class="content-box-large">
    <div class="panel-heading">
        <div class="panel-title">
            <h2>Cadastrar Novo Usuario</h2>
        </div>
    </div>
    <div class="panel-body">
        <div class="form-group">
            <label class="control-label col-md-1" for="busca">Busca :</label>
            <div class="col-md-9">
                <input type="text" class="form-control" id="busca" name="busca" />
            </div>
            <div class="col-md-2">
                <a href="#" class="btn btn-primary" onclick="Listar();"><i class="glyphicon glyphicon-search"> </i> Buscar</a>
            </div>
        </div>
        <div class="row">
            <a href="#" class="btn btn-info" onclick="NovoUsuario();">Novo Usuario</a>
        </div>
        <br /><br />
        <div id="listarusuarios"></div>
    </div>
</div>


