@model IEnumerable<Sis_RosangelaCunha.Models.Usuario>

<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="listausuarios">
    <thead>
        <tr>
            <th>
                Login
            </th>
            <th>
                Senha
            </th>
            <th>
                Nome
            </th>
            <th>
                E-mail
            </th>
            <th>
                Celular
            </th>
            <th>
                Perfil de Acesso
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Senha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Celular)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnumPerfilAcesso)
                </td>
                <td>
                    <a href="#" onclick="EditarUsuario(@item.UsuarioId);"><i class="glyphicon glyphicon-edit"></i></a> |
                    <a href="#" onclick="ExcluirUsuario(@item.UsuarioId);"><i class="glyphicon glyphicon-remove"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>