@model Sis_RosangelaCunha.ViewModel.AquisicaoContratoViewModel

<form id="frmAquisicao">

    @Html.HiddenFor(model => model.AquisicaoId)
    @Html.HiddenFor(model => model.IdUsuario)


    <div class="form-group">
        <div class="row">
            <label class="col-sm-3" for="IdCliente">Clientes :</label>
            <div class="col-sm-6">
                @Html.DropDownListFor(model => model.IdCliente, Model.Clientes, "Selecione", new { @class = "form-control" })
            </div>
            <div class="col-sm-3">
                <a href="javascript:void(0);" class="btn btn-info" onclick="NovoCliente();"><i class="fa fa-users"></i> Novo Cliente</a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <label for="DataAquisicao" class="control-label col-md-3">Data Aquisição :</label>
            <div class="col-md-3">
                @Html.EditorFor(model => model.DataAquisicao, new { htmlAttributes = new { @class = "form-control datepicker data" } })
            </div>
        </div>
    </div>



    <div class="row">

        <div class="form-group">
            <label for="Desconto" class="control-label col-md-3">Desconto :</label>
            <div class="col-md-3">
                @Html.EditorFor(model => model.Desconto, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            <label for="Migracoes" class="control-label col-md-3">Migrações:</label>
            <div class="col-md-3">
                @Html.EditorFor(model => model.Migracoes, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

    </div>

    <div class="row">

        <div class="form-group">
            <label for="LoginSerasa1" class="col-md-3">Login :</label>
            <div class="col-md-9">
                @Html.EditorFor(model => model.LoginSerasa1, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

    </div>


    <div class="row">

        <div class="form-group">
            <label for="LoginSerasa2" class="col-md-3">Login 2 :</label>
            <div class="col-md-3">
                @Html.EditorFor(model => model.LoginSerasa2, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label for="LoginSerasa3" class="col-md-3">Login 3 :</label>
            <div class="col-md-3">
                @Html.EditorFor(model => model.LoginSerasa3, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

    </div>
    <div class="row">
        <div class="form-group">
            <label for="LoginSerasa4" class="col-md-3">Login 4 :</label>
            <div class="col-md-3">
                @Html.EditorFor(model => model.LoginSerasa4, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <label for="LoginSerasa5" class="col-md-3">Login 5 :</label>
            <div class="col-md-3">
                @Html.EditorFor(model => model.LoginSerasa5, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

    </div>

    <div class="row">
        <div class="form-group">
            <label for="Observacoes" class="col-md-3">Observações :</label>
            <div class="col-md-9">
                @Html.TextAreaFor(model => model.Observacoes, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
    </div>

    <div class="row">

        @*<div class="form-group col-md-3">
                <label for="IdUsuario">Usuário :</label>
                @Html.DropDownListFor(model => model.IdUsuario, Model.Usuarios, "Selecione", new { @class = "form-control" })
            </div>*@

        <div class="form-group">
            <label for="IdAvaliacao" class="col-md-3">Agendamento:</label>

            <div class="col-md-3">
                @Html.DropDownListFor(model => model.IdAgendamento, Model.Agendamentos, "Selecione", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label for="IdAvaliacao" class="col-md-3">Avaliação :</label>
            <div class="col-md-3">
                @Html.DropDownListFor(model => model.IdAvaliacao, Model.Avaliacoes, "Selecione", new { @class = "form-control" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="form-group">
            <label for="IdPlano" class="col-md-3">Plano:</label>
            <div class="col-md-9">
                @Html.DropDownListFor(model => model.IdPlano, Model.Planos, "Selecione", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-10 col-md-10">
                <a href="#" class="btn btn-success" onclick="SalvarAquicoesContratos();">Gravar</a>
            </div>
        </div>
    </div>


</form>



<div id="myModalCliente" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="ModalTitle">Novo Cliente</h4>
            </div>
            <div class="modal-body" id="ModalBody">

                <div class="row">

                    <div class="form-group">
                        <label class="col-sm-3" for="nomecliente">Nome Cliente :</label>

                        <div class="col-sm-9">
                            <input type="text" id="nomecliente" class="form-control" />
                        </div>
                    </div>


                </div>

            </div>
            <div class="modal-footer">
                <a href="javascript:void(0);" class="btn btn-default">FECHAR</a>
                <a href="javascript:void(0);" class="btn btn-success" onclick="SalvarClienteSimples();">SALVAR</a>
            </div>
        </div>

    </div>
</div>


