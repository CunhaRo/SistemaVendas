<!DOCTYPE html>
<html>
<head>
    <title>Upload</title>
    <link href="~/Content/bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.9.0.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/multifile/jQuery.MultiFile.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#file').MultiFile({
                accept: 'pdf|jpg|pgn',
                max: 3,
                STRING: {
                    remove: 'Remover',
                    denied: 'Tipo do arquivo inválido $ext!',
                    duplicate: 'Esse arquivo já foi selecionado:\n$file!'
                }
            });
        });
    </script>
</head>
<body>
    <div class="container">
        <h2>Upload</h2>
        <h3>@Html.Encode(ViewData["Message"])</h3>
        @Html.BeginForm("Upload", "ItemAnexado", FormMethod.Post, new { enctype = "multipart/form-data" })

        <fieldset>
            <label for="nomeArquivo">Insira o Contrato Assinado: </label>
            <div>
                <input type="text" name="nomeArquivo">
                <input id="file" type="submit" value="Procurar..." />
            </div>
            <input type="submit" value="Enviar"/>
        </fieldset>
    </div>
</body>
</html>
