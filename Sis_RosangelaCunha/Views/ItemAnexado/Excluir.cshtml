@model Sis_RosangelaCunha.Models.ItemAnexado
@{
    ViewBag.Title = "Excluir";
}
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h2>Novo Item</h2>
        <hr />
        <div class="=form-group">
            @Html.LabelFor(model => model.NomeArquivo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.NomeArquivo, new { @class = "form-control" })
            </div>
        </div>
        <input type="submit" value="Excluir" class="btn btn-sm btn-success">
    </div>
}

