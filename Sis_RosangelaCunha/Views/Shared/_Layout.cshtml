      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
    <!-- jQuery UI -->
    <link href="https://code.jquery.com/ui/1.10.3/themes/redmond/jquery-ui.css" rel="stylesheet" media="screen">

    <link href="~/Content/css/toastr.css" rel="stylesheet" />

    <link href="~/Content/DataTable/jquery.dataTables.css" rel="stylesheet" />
    <link href="~/Content/DataTable/buttons.dataTables.css" rel="stylesheet" />


    @RenderSection("style", false)
</head>
<body>
    <div class="header">
        <div class="container">
            <div class="row">
                <div class="col-md-5">
                    <!-- Logo -->
                    <div class="logo">
                        <h1><a href="index.html">SICOV</a></h1>
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="row">
                        <div class="col-lg-12">
                            @*<div class="input-group form">
                                    <input type="text" class="form-control" placeholder="Search...">
                                    <span class="input-group-btn">
                                        <button class="btn btn-primary" type="button">BUSCA</button>
                                    </span>
                                </div>*@
                        </div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="navbar navbar-inverse" role="banner">
                        <nav class="collapse navbar-collapse bs-navbar-collapse navbar-right" role="navigation">
                            <ul class="nav navbar-nav">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Minha Conta <b class="caret"></b></a>
                                    <ul class="dropdown-menu animated fadeInUp">
                                        <li><a href="/Usuario/AlterarSenha"><i class="glyphicon glyphicon-user"></i>Alterar Senha</a></li>
                                        <li><a href="login.html"><i class="glyphicon glyphicon-remove"></i>Sair</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="page-content">
        <div class="row">
            <div class="col-md-2">
                <div class="sidebar content-box" style="display: block;">
                    <ul class="nav">
                        <!-- Main menu -->
                        <li class="current"><a href="/Home/Index"><i class="glyphicon glyphicon-home"></i> Home</a></li>
                        <li><a href="/Cliente"><i class="glyphicon glyphicon-thumbs-up"></i> Cliente</a></li>
                        <li><a href="/AquisicaoContrato"><i class="glyphicon glyphicon-lock"></i> Aquisicao Contrato</a></li>
                        <li><a href="/Agendamento"><i class="glyphicon glyphicon-calendar"></i> Agendamentos</a></li>
                        <li><a href="/Plano"><i class="glyphicon glyphicon-record"></i> Planos</a></li>
                        <li><a href="/Usuario"><i class="glyphicon glyphicon-user"></i> Usuarios</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md-10">
                <div class="row">
                    @RenderBody()
                </div>

            </div>
        </div>
    </div>



    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title" id="ModalTitle"></h4>
                </div>
                <div class="modal-body" id="ModalBody">

                </div>
                <div class="modal-footer">
                    @*<button type="button" class="btn btn-default" data-dismiss="modal">FECHAR</button>*@
                </div>
            </div>

        </div>
    </div>



    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="https://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")"></script>


    @Scripts.Render("~/bundles/dttables")
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/helper.js")"></script>
    <script src="@Url.Content("~/Scripts/custom.js")"></script>
    <script src="@Url.Content("~/Scripts/toastr.js")"></script>
    <script src="~/Scripts/jquery-maskeditinput.js"></script>
    <script src="~/Scripts/formathelper.js"></script>
    <script src="~/Scripts/waitmodal.js"></script>

    @RenderSection("scripts", false);
</body>
</html>